; macro to match two given string and return 1 if true and 0 if its false

strcmp macro str1 str2 sz retv   ; retv is the result of the comparison

      lea di,str1
      led si,str2
      mov ch,00h
      mov cl,sz
      cld
      repz cmpsb
      cmp cx,00h
      jnz rett      ; jump to return true
      mov retv,00h

rett: mov retv,01h  ; return true value

endm strcmp
